{
  "$schema-template": "4.0.0",
  "modulesContent": {
    "$edgeAgent": {
      "properties.desired": {
        "schemaVersion": "1.1",
        "runtime": {
          "type": "docker",
          "settings": {
            "minDockerVersion": "v1.25",
            "loggingOptions": "",
            "registryCredentials": {
              "myacr": {
                "username": "$CONTAINER_REGISTRY_USERNAME",
                "password": "$CONTAINER_REGISTRY_PASSWORD",
                "address": "$CONTAINER_REGISTRY_ADDRESS"
              }
            }
          }
        },
        "systemModules": {
          "edgeAgent": {
            "type": "docker",
            "settings": {
              "image": "mcr.microsoft.com/azureiotedge-agent:1.4",
              "createOptions": {}
            }
          },
          "edgeHub": {
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "mcr.microsoft.com/azureiotedge-hub:1.4",
              "createOptions": {
                "HostConfig": {
                  "PortBindings": {
                    "5671/tcp": [{"HostPort": "5671"}],
                    "8883/tcp": [{"HostPort": "8883"}],
                    "443/tcp": [{"HostPort": "443"}]
                  }
                }
              }
            }
          }
        },
        "modules": {
          "backend": {
            "version": "1.0",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "${MODULES.backend}",
              "createOptions": {
                "HostConfig": {
                  "PortBindings": {
                    "8000/tcp": [{"HostPort": "8000"}]
                  }
                },
                "Env": [
                  "KAFKA_BOOTSTRAP_SERVERS=kafka:29092",
                  "POSTGRES_HOST=postgres",
                  "POSTGRES_PORT=5432",
                  "POSTGRES_DB=logistics",
                  "POSTGRES_USER=admin",
                  "POSTGRES_PASSWORD=!postgres16"
                ]
              }
            }
          },
          "sensorSimulator": {
            "version": "1.0",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "${MODULES.sensorSimulator}",
              "createOptions": {
                "Env": [
                  "KAFKA_BOOTSTRAP_SERVERS=kafka:29092"
                ]
              }
            }
          },
          "kafka": {
            "version": "1.0",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "confluentinc/cp-kafka:7.5.0",
              "createOptions": {
                "HostConfig": {
                  "PortBindings": {
                    "9092/tcp": [{"HostPort": "9092"}]
                  }
                },
                "Env": [
                  "KAFKA_BROKER_ID=1",
                  "KAFKA_ZOOKEEPER_CONNECT=zookeeper:2181",
                  "KAFKA_ADVERTISED_LISTENERS=PLAINTEXT://kafka:29092,PLAINTEXT_HOST://localhost:9092",
                  "KAFKA_LISTENER_SECURITY_PROTOCOL_MAP=PLAINTEXT:PLAINTEXT,PLAINTEXT_HOST:PLAINTEXT",
                  "KAFKA_INTER_BROKER_LISTENER_NAME=PLAINTEXT",
                  "KAFKA_OFFSETS_TOPIC_REPLICATION_FACTOR=1"
                ]
              }
            }
          },
          "zookeeper": {
            "version": "1.0",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "confluentinc/cp-zookeeper:7.5.0",
              "createOptions": {
                "HostConfig": {
                  "PortBindings": {
                    "2181/tcp": [{"HostPort": "2181"}]
                  }
                },
                "Env": [
                  "ZOOKEEPER_CLIENT_PORT=2181",
                  "ZOOKEEPER_TICK_TIME=2000"
                ]
              }
            }
          },
          "postgres": {
            "version": "1.0",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "postgres:15",
              "createOptions": {
                "HostConfig": {
                  "PortBindings": {
                    "5432/tcp": [{"HostPort": "5432"}]
                  },
                  "Binds": [
                    "postgres_data:/var/lib/postgresql/data"
                  ]
                },
                "Env": [
                  "POSTGRES_USER=admin",
                  "POSTGRES_PASSWORD=!postgres16",
                  "POSTGRES_DB=logistics"
                ]
              }
            }
          }
        }
      }
    },
    "$edgeHub": {
      "properties.desired": {
        "schemaVersion": "1.2",
        "routes": {
          "sensorToBackend": "FROM /messages/modules/sensorSimulator/outputs/* INTO BrokeredEndpoint(\"/modules/backend/inputs/sensor\")",
          "backendToIoTHub": "FROM /messages/modules/backend/outputs/* INTO $upstream"
        },
        "storeAndForwardConfiguration": {
          "timeToLiveSecs": 7200
        }
      }
    }
  }
}
