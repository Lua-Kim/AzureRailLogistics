{
  "description": "물류센터 라인 데이터 스키마",
  "type": "object",
  "properties": {
    "zone_id": {
      "type": "string",
      "description": "구역 아이디",
      "example": "MFC-PK"
    },
    "line_id": {
      "type": "string",
      "description": "물류 라인 아이디",
      "example": "LINE-001"
    },
    "sensor_id": {
      "type": "string",
      "description": "센서 아이디",
      "example": "SENSOR-00001"
    },
    "signal": {
      "type": "boolean",
      "description": "바스켓 이동 여부 (true: 이동중, false: 정지)",
      "example": true
    },
    "direction": {
      "type": "string",
      "description": "이동 방향",
      "enum": ["FORWARD", "BACKWARD", "STOP"],
      "example": "FORWARD"
    },
    "speed": {
      "type": "number",
      "description": "이동 속도 (m/s)",
      "example": 2.5
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "데이터 수집 시간",
      "example": "2026-01-16T10:30:45.123Z"
    }
  },
  "required": ["zone_id", "line_id", "sensor_id", "signal", "direction", "timestamp"]
}
