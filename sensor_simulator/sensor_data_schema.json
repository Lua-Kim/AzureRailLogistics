{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "레일 센서 데이터 이벤트",
  "description": "물류센터 레일에 설치된 센서가 발생시키는 개별 데이터 이벤트의 스키마입니다.",
  "type": "object",
  "properties": {
    "sensor_id": {
      "description": "센서의 고유 식별자 (예: 'RAIL-S-001').",
      "type": "string"
    },
    "timestamp": {
      "description": "데이터가 생성된 시점의 ISO 8601 타임스탬프.",
      "type": "string",
      "format": "date-time"
    },
    "pass_event": {
      "description": "물품이 센서 지점을 통과했는지 여부 (1: 통과, 0: 미통과).",
      "type": "integer",
      "enum": [0, 1]
    },
    "line_direction": {
      "description": "센서가 위치한 레일 라인의 물품 이동 방향 (예: '입고', '출고', '동쪽', '서쪽').",
      "type": "string"
    },
    "speed_at_sensor": {
      "description": "센서 지점을 통과하는 물품의 속도 (m/s).",
      "type": "number",
      "minimum": 0
    },
    "sensor_status": {
      "description": "센서 자체의 운영 상태 (예: '정상', '경고', '오류').",
      "type": "string",
      "enum": ["정상", "경고", "오류", "오프라인"]
    }
  },
  "required": [
    "sensor_id",
    "timestamp",
    "pass_event",
    "line_direction",
    "speed_at_sensor",
    "sensor_status"
  ]
}
